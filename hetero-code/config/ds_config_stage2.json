{
    "fp16": {
        "enabled": true,
        "auto_cast": true,
        "loss_scale": 0
    },

    "zero_optimization": {
        "stage": 2,
        "offload_optimizer": {
            "device": "cpu",
            "ratio": 1,
            "pin_memory": true
        }
    },

    "optimizer": {
        "type": "AdamW",
        "params": { "lr": 0.0005, "betas": [0.9, 0.95], "eps": 1e-8, "weight_decay": 0.01 }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "warmup_min_lr": 0.0,
            "warmup_max_lr": 0.0005,
            "warmup_num_steps": 200,
            "total_num_steps": 1000
        }
    },
    "gradient_clipping": 1.0,

    
    "train_batch_size" :16,
    "micro_batch_size_per_gpu": 16,
    "gradient_accumulation_steps": 1,

    "steps_per_print": 1,
    "wall_clock_breakdown": false,
    "memory_breakdown": true,
    "dump_state": true
}
